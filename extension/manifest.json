{
    "name": "FB Sticker",
    "version": "1.0",
    "description": "",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {},
    "permissions": [
        "tabs",
        "https://*.facebook.com/*"
    ],
    "web_accessible_resources": [
        "images/*",
        "scripts/*",
        "templates/*",
        "lib/*"
    ]
}